
@{
     ViewBag.Title = "Shop";
     Layout = "~/Views/Shared/_LayoutPage1.cshtml";
     var booksList = ViewBag.booksList;}

<div class="page-heading header-text">
    <h3>Magazinul nostru</h3>
</div>

<div class="section trending">
    <div class="container">
         <div class="row trending-box">
              @foreach (var book in booksList)
              {
                   <div class="col-lg-3 col-md-6 align-self-center mb-30 trending-items col-md-6 adv">
                        <div class="item">
                             <div class="thumb">
                                  <a href="@Url.Action("Product_details", "Home", new { name = book.Name })"><img src="@Url.Content("~/assets/images/books/" + book.Image)" alt="" width="150" height="400"></a>
                             </div>
                             <div class="down-content">
                                  <span class="category">@book.Type</span>
                                  <h4>@book.Name</h4>
                                  <span class="price">@book.Price $</span>
                                  <a href="@Url.Action("Product_details", "Home", new { name = book.Name })"><i class="fa fa-shopping-bag"></i></a>
                             </div>
                        </div>
                   </div>
              }
         </div>
    </div>
</div>

